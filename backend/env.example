DATABASE_URL=postgresql://postgres:password@localhost:5432/memory
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Model Configuration (defaults to production-grade choices)
# OPENAI_CHAT_MODEL=gpt-4o-mini  # Options: gpt-4o-mini (recommended), gpt-4-turbo (highest quality), gpt-3.5-turbo
# OPENAI_SUMMARY_MODEL=gpt-4o-mini  # Options: gpt-4o-mini (recommended), gpt-4-turbo

# Optional: Semantic Search Configuration
# TOP_K_CONTEXTS=3  # Number of relevant contexts to retrieve (3-5 recommended)
# SIMILARITY_THRESHOLD=0.7  # Minimum similarity score 0.0-1.0
# RECENT_MESSAGES_LIMIT=5  # Number of recent message pairs to include

# Optional: Logging Configuration
# LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
# VERBOSE_LOGGING=false  # Enable detailed debug output

